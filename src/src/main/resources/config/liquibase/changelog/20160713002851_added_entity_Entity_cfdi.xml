<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="now()" dbms="mysql,h2"/>
    <property name="now" value="current_timestamp" dbms="postgresql"/>
    <property name="now" value="sysdate" dbms="oracle"/>

    <property name="autoIncrement" value="true" dbms="mysql,h2,postgresql,oracle"/>

    <property name="floatType" value="float4" dbms="postgresql, h2"/>
    <property name="floatType" value="float" dbms="mysql, oracle"/>

    <!--
        Added the entity Entity_cfdi.
    -->
    <changeSet id="20160713002851" author="jhipster">
        <createTable tableName="entity_cfdi">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="accounting_id" type="bigint"/>
            <column name="key_entity_id" type="bigint"/>
            <column name="scope_id" type="bigint"/>
            <column name="freecom_ine_id" type="bigint"/>
            <!-- jhipster-needle-liquibase-add-column - Jhipster will add columns here, do not remove-->
        </createTable>
        
        <addForeignKeyConstraint baseColumnNames="accounting_id"
                                 baseTableName="entity_cfdi"
                                 constraintName="fk_entity_cfdi_accounting_id"
                                 referencedColumnNames="id"
                                 referencedTableName="accounting"/>

        <addForeignKeyConstraint baseColumnNames="key_entity_id"
                                 baseTableName="entity_cfdi"
                                 constraintName="fk_entity_cfdi_key_entity_id"
                                 referencedColumnNames="id"
                                 referencedTableName="key_entity"/>

        <addForeignKeyConstraint baseColumnNames="scope_id"
                                 baseTableName="entity_cfdi"
                                 constraintName="fk_entity_cfdi_scope_id"
                                 referencedColumnNames="id"
                                 referencedTableName="scope"/>

        <addForeignKeyConstraint baseColumnNames="freecom_ine_id"
                                 baseTableName="entity_cfdi"
                                 constraintName="fk_entity_cfdi_freecom_ine_id"
                                 referencedColumnNames="id"
                                 referencedTableName="freecom_ine"/>

    </changeSet>
</databaseChangeLog>
